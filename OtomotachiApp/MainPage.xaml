<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             xmlns:views="clr-namespace:OtomotachiApp.Pages.Views"
             xmlns:pages="clr-namespace:OtomotachiApp.Pages"
             xmlns:m="clr-namespace:OtomotachiApp.Models"
             x:Class="OtomotachiApp.MainPage">

    <ListView ItemsSource="{x:Static m:AppData.Pens}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Label Text="{Binding _name}"/>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>